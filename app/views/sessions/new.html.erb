<% end%>

<form action = "<%= session_url %>" method = "POST">

    <label for = "username">
        Username
        <input type = "text" name = "username">
    </label>
    <label for = "password">
        Password
        <input type = "password" name = "password">
    </label>

    <input type="submit" name= "button">

</form>